{{> layout/header }}

<div id="box" class="wp300">
    <h2>회원가입</h2>
    <form>
        <input type="text" class="w100 mg-b15" id="nickname" placeholder="별명을 입력하세요">
        <input type="password" class="w100 mg-b15" id="password" placeholder="비밀번호를 입력하세요">
        <input type="password" class="w100 mg-b15" id="passwordCk" placeholder="비밀번호를 확인을 입력해주세요">
        <input type="text" class="w100 mg-b15" id="email" placeholder="이메일을 입력해주세요">
        <input type="text" class="w100 mg-b15" id="phone" placeholder="숫자만 입력해주세요">
    </form>

    <a href="/" role="button" class="btn btn-secondary">취소</a>
    <button id="signup" class="btn btn-primary">Sign up</button>
</div>

{{> layout/footer }}